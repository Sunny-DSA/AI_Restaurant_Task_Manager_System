{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020", "DOM"],
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "jsx": "react-jsx",
    "strict": false,
    "noEmit": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "types": ["node", "vite/client", "express", "multer"],
    "baseUrl": ".",
    "paths": {
      "@shared/*": ["shared/*"],
      "@/*": ["client/src/*"],
      "@client/*": ["client/*"],
      "@server/*": ["server/*"]
    }
  },
  "include": ["client", "server", "shared", "vite.config.ts", "postcss.config.js", "tailwind.config.ts", "drizzle.config.ts"],
  "exclude": ["dist", "node_modules"]
}
